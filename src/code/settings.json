{
    //
    // Colours and font
    //
    "editor.fontFamily": "SF Mono",
    "editor.fontWeight": "500",
    "editor.fontSize": 14,
    "workbench.colorTheme": "Xcode 11 Default Dark",
    //
    // Hide annoyances
    //
    "editor.folding": false,
    "editor.glyphMargin": false,
    "editor.lightbulb.enabled": false,
    "editor.lineNumbers": "off",
    "editor.minimap.enabled": false,
    "editor.renderIndentGuides": false,
    "editor.renderWhitespace": "none",
    "editor.roundedSelection": false,
    "workbench.activityBar.visible": false,
    "workbench.editor.showTabs": false,
    "workbench.list.automaticKeyboardNavigation": false,
    "workbench.statusBar.visible": false,
    //
    // Small pleasant UI tweaks
    //
    "editor.cursorWidth": 1,
    "editor.suggest.snippetsPreventQuickSuggestions": false,
    "window.nativeTabs": true,
    "workbench.panel.defaultLocation": "right",
    "workbench.tree.indent": 16,
    //
    // Clean up automatically
    //
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,
    //
    // Plugins and languages
    //
    "customizeUI.stylesheet": {
        "body.inline-title-bar .monaco-workbench .sidebar .composite.title": "background: none !important",
        ".suggest-widget > div, .monaco-hover": "box-shadow: 0 5px 10px rgba(0,0,0,0.5); border-radius: 5px",
        ".suggest-widget .focused": "border-radius: 5px",
        "*": "text-shadow: 0 0 currentColor"
    },
    "diffEditor.renderSideBySide": false,
    "rewrap.wrappingColumn": 100,
    "rust-analyzer.checkOnSave.command": "clippy",
    "terminal.integrated.rendererType": "dom",
    "testExplorer.showOnRun": true,
    "vscode_vibrancy.theme": "Dark (Only Subbar)",
    "vscode_vibrancy.type": "menu",
    "window.titleBarStyle": "native",
    "workbench.iconTheme": "vscode-icons-mac"
}
