{
    //
    // Colours and font
    //
    "editor.fontFamily": "Input Sans Narrow",
    "terminal.integrated.fontFamily": "Input Mono Narrow",
    "editor.fontSize": 14,
    "workbench.colorTheme": "Pale Fire",
    "editor.semanticTokenColorCustomizations": {
        "rules": {
            "comment": {
                "italic": true
            },
            "*.declaration": {
                "bold": true
            },
            "variable.declaration": {
                "bold": false
            },
            "parameter.declaration": {
                "bold": false
            },
            "property.declaration": {
                "bold": false
            },
            "enumMember.declaration": {
                "bold": false
            }
        }
    },
    //
    // Hide annoyances
    //
    "editor.codeLens": false,
    "editor.glyphMargin": false,
    "editor.lightbulb.enabled": false,
    "editor.lineNumbers": "off",
    "editor.minimap.enabled": false,
    "editor.renderIndentGuides": false,
    "editor.renderWhitespace": "none",
    "editor.roundedSelection": false,
    "workbench.activityBar.visible": false,
    "workbench.editor.showTabs": false,
    "workbench.iconTheme": null,
    "workbench.list.automaticKeyboardNavigation": false,
    "workbench.sideBar.location": "right",
    "workbench.statusBar.visible": false,
    //
    // Small pleasant UI tweaks
    //
    "editor.cursorBlinking": "phase",
    "editor.cursorSmoothCaretAnimation": true,
    "editor.suggest.snippetsPreventQuickSuggestions": false,
    "window.nativeTabs": true,
    "workbench.panel.defaultLocation": "right",
    "workbench.tree.indent": 16,
    //
    // Clean up automatically
    //
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,
    //
    // Plugins and languages
    //
    "customizeUI.stylesheet": {
        ".mtk11, .mtk12, .mtk19": "font-family: Input Serif Narrow",
        ".mac": "font-family: Input Sans Narrow; --monaco-monospace-font: Input Sans Narrow",
    },
    "diffEditor.renderSideBySide": false,
    "rewrap.wrappingColumn": 100,
    "rust-analyzer.assist.importMergeBehaviour": "last",
    "rust-analyzer.checkOnSave.command": "clippy",
    "testExplorer.showOnRun": true
}
