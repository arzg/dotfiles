{
  //
  // Colours and font
  //

  "terminal.integrated.fontFamily": "Input Mono Narrow",
  "editor.fontSize": 13,
  "editor.lineHeight": 19,
  "workbench.colorTheme": "Pale Fire",
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": ["comment", "comment.line.documentation"],
        "settings": {
          "fontStyle": "italic"
        }
      }
    ]
  },
  "editor.semanticTokenColorCustomizations": {
    "rules": {
      "comment": { "italic": true },
      "comment.documentation": { "italic": true }
    }
  },

  //
  // Hide annoyances
  //

  "editor.codeLens": false,
  "editor.folding": false,
  "editor.glyphMargin": false,
  "editor.lightbulb.enabled": false,
  "editor.lineNumbers": "off",
  "editor.minimap.enabled": false,
  "editor.renderIndentGuides": false,
  "editor.renderWhitespace": "none",
  "editor.roundedSelection": false,
  "scm.diffDecorationsGutterWidth": 2,
  "workbench.activityBar.visible": false,
  "workbench.editor.showTabs": false,
  "workbench.iconTheme": null,
  "workbench.list.automaticKeyboardNavigation": false,
  "workbench.sideBar.location": "right",

  //
  // Small pleasant UI tweaks
  //

  "editor.cursorBlinking": "phase",
  "editor.suggest.snippetsPreventQuickSuggestions": false,
  "window.nativeTabs": true,
  "window.titleBarStyle": "native",
  "workbench.panel.defaultLocation": "right",
  "workbench.tree.indent": 16,

  //
  // Clean up automatically
  //

  "editor.formatOnSave": true,
  "editor.formatOnType": true,
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,

  //
  // Plugins and languages
  //

  "customizeUI.stylesheet": {
    "*, ::before, ::after": "text-shadow: 0 0 0 currentColor",
    "*:not(.codicon)": "font-family: Input Sans Narrow !important",
    ".mtk5, .mtk13, .mtk14": "font-family: Input Serif Narrow !important",
    ".editor-widget, .suggest-details, .monaco-hover, .quick-input-widget": "box-shadow: 0 5px 10px rgba(0, 0, 0, 0.5) !important; border-radius: 10px; backdrop-filter: blur(30px) saturate(180%); background-color: rgba(50, 50, 50, 0.6) !important",
    ".monaco-list-rows": "background: none !important",
    ".slider": "border-radius: 14px;"
  },
  "diffEditor.ignoreTrimWhitespace": false,
  "diffEditor.renderSideBySide": false,
  "git.enableCommitSigning": true,
  "rewrap.wrappingColumn": 100,
  "rust-analyzer.assist.importMergeBehavior": "last",
  "rust-analyzer.checkOnSave.command": "clippy",
  "rust-analyzer.diagnostics.disabled": ["macro-error", "unresolved-import"],
  "rust-analyzer.inlayHints.maxLength": 30,

  // Use Prettier for these languages.
  "[js]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[scss]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[yaml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // Format HTML by manually running Prettier on save. This is because the Prettier extension
  // doesnâ€™t seem to detect the Go template plugin, while the CLI does.
  "[html]": {
    "editor.formatOnSave": false
  },
  "emeraldwalk.runonsave": {
    "commands": [
      {
        "match": "\\.html$",
        "cmd": "prettier --write ${file}"
      }
    ]
  }
}
